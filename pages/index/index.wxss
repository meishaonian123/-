/**index.wxss**/
.slider,
.slider swiper {
  height: 190px;
}

.slider image {
  width: 100%;
  height:  190px;
  vertical-align: bottom;
}

/* 首页导航 */
.nav-item image {
  width: 80rpx;
  height: 80rpx;
}
.index-nav {
  display: flex;
  flex-wrap: wrap; 
}
.index-nav .nav-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 33.333333%;
  height: 200rpx;
  font-size: 14px;
  border-bottom: 1rpx solid #f00;
  position: relative;
  background-color: #fff;
  /* box-sizing: border-box; */
}

.index-nav .nav-item:nth-child(3n)::after{
  width: 0;
}
/* 首页分区入口 */
.index-enter {
    display: flex;
    padding: 20rpx 25rpx;
}

.index-enter .enter-item {
    width: 50%;
    display: flex;
    justify-content: center;
}

.index-enter .enter-item image {
    width: 320rpx;
    height: 178rpx;
}
page {
  background-color: #ccc;
  height: 100%;
}