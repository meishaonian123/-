/* pages/message/message.wxss */
page {
  background-color: #f1f1f1;
}
.card {
  margin: 50rpx 20rpx;
  background-color: #fff;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 20rpx 35rpx;  
  display: flex;
  flex-direction: column;
}
.card .card-title{
  font-size: 16px;
  margin-bottom: 20rpx;
}
.card .card-date{
  font-size: 12px;
  color: #ddd;
  border-bottom: 1rpx solid #ddd;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}
.card image{
  width: 100%;
  height: 300rpx;
}
.card .card-desc{
  font-size: 22rpx;
  color: #333;
  padding-bottom: 15rpx;
  margin-bottom: 15rpx;
  border-bottom: 1rpx solid #ccc;

}
.card .card-read {
  font-size: 18rpx;
  color: #ccc;

 
}
